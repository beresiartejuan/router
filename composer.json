{
    "name": "beresiartejuan/router",
    "description": "A lightweight and simple object oriented PHP Router (based on bramus/router)",
    "keywords": ["router", "routing"],
    "homepage": "https://github.com/beresiartejuan/router",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan Beresiarte",
            "email": "juanberesiarte@example.com"
        }
    ],
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "phpunit/php-code-coverage": "^12.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {"Router\\": "src/"}
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix"
    }
}